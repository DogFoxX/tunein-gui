{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-temp-read",
    "fs:allow-temp-write",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "fs:allow-app-write-recursive",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://*" }]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [{
        "name": "exec",
        "cmd": "powershell.exe",
        "args": true
      }]
    }
  ]
}